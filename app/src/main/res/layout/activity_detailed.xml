<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.gwu.huanzhou.hhzweather.activity.DetailedActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_purple"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailed_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="80dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/detailed_image"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailed_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="30dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/detailed_dewpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="30dp"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/detailed_visibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="30dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailed_humidity_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/detailed_activity_humidity"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/detailed_dewpoint_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="@string/detailed_activity_dewpoint"
                android:textColor="@android:color/holo_blue_light"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/detailed_visibility_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="@string/detailed_activity_visibility"
                android:textColor="@android:color/holo_blue_light"
                android:gravity="center"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailed_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="30dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/detailed_windmph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="30dp"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/detailed_winddir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="30dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailed_pressure_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/detailed_activity_pressure"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20dp"
                android:gravity="center"/>


            <TextView
                android:id="@+id/detailed_windmph_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="@string/detailed_activity_wind"
                android:textColor="@android:color/holo_blue_light"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/detailed_winddir_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="@string/detailed_activity_direction"
                android:textColor="@android:color/holo_blue_light"
                android:gravity="center"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/forcast_day_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailed_activity_weekday"
            android:textSize="13dp"
            android:layout_weight="1"
            android:textColor="@android:color/holo_blue_light"
            android:gravity="center">
        </TextView>

        <TextView
            android:id="@+id/forcast_image_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailed_activity_weather"
            android:textSize="13dp"
            android:layout_weight="1"
            android:textColor="@android:color/holo_blue_light"
            android:gravity="center">
        </TextView>

        <TextView
            android:id="@+id/forcast_hightemp_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailed_activity_hightemp"
            android:textSize="13dp"
            android:layout_weight="1"
            android:textColor="@android:color/holo_blue_light"
            android:gravity="center">
        </TextView>

        <TextView
            android:id="@+id/forcast_lowtemp_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailed_activity_lowtemp"
            android:textSize="13dp"
            android:layout_weight="1"
            android:textColor="@android:color/holo_blue_light"
            android:gravity="center">
        </TextView>

        <TextView
            android:id="@+id/forcast_humidity_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailed_activity_avehumidity"
            android:textSize="13dp"
            android:layout_weight="1"
            android:textColor="@android:color/holo_blue_light"
            android:gravity="center">
        </TextView>

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />

        <ListView
            android:id="@+id/forecast_list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </ListView>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
