<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/forcast_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First"
        android:textSize="30dp"
        android:layout_weight="1"
        android:gravity="center">
    </TextView>

    <ImageView
        android:id="@+id/forcast_image"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_weight="1"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/forcast_hightemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Third"
        android:textSize="30dp"
        android:layout_weight="1"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/forcast_lowtemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Third"
        android:textSize="30dp"
        android:layout_weight="1"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/forcast_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fourth"
        android:textSize="30dp"
        android:layout_weight="1"
        android:gravity="center">
    </TextView>



</LinearLayout>